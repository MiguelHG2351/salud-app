<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="NamespaceTypo" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="NamespaceTypo">

            <LinearLayout
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:hint="Welcome back"
                        android:textColor="@color/gray"
                        android:textSize="12dp"

                        />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:scrollbarSize="16dp"
                        android:text="NameUser"
                        android:textColor="@color/Black" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:layout_width="356dp"
                android:layout_height="37dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:drawableEnd="@drawable/icon_search"
                android:ems="346"
                android:hint="Search"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="353dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_todos"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:text="Todos"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button_agua"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="Agua"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button_caminar"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/white"
                    android:text="Caminar"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tareasRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recordatorioRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
